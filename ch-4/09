#include <iostream>
#include <string>
using namespace std;

struct CandyBar
{
	string type;
	double weight;
	int Ca;
};

int main()
{
	CandyBar* snack = new CandyBar[3]
	{
		{ "Mocha Munch", 2.3, 350 },
		{ "Mocha Munch", 2.3, 350 },
		{ "Mocha Munch", 2.3, 350 }
	};
	cout << "Type     \tWeight \tCalorie\t\n";
	cout << snack[0].type << '\t' << snack[0].weight << '\t' << snack[0].Ca << '\t' << endl;
	cout << snack[1].type << '\t' << snack[1].weight << '\t' << snack[1].Ca << '\t' << endl;
	cout << snack[1].type << '\t' << snack[1].weight << '\t' << snack[1].Ca << '\t' << endl;
	return 0;
}

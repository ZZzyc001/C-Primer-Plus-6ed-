#include <iostream>
int main()
{
	using namespace std;
	char ch;
	cout << "Please enter one of the following choices:\n"
		"c) carnovore           p) pianist\n"
		"t) tree                g) game\n";
	while (cin >> ch && ch != 'c' && ch != 'p' && ch != 't' && ch != 'g')
		cout << "Please enter a c, p, t, or g: ";
	switch (ch)
	{
	case 'c' :
		cout << "You chose carnovore.\n";
		break;
	case 'p' :
		cout << "You chose pianist.\n";
		break;
	case 't' :
		cout << "A maple is a tree.\n";
		break;
	case 'g' :
		cout << "You chose game\n";
		break;
	}
	return 0;
}
